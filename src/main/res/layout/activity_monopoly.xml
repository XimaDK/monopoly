<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MonopolyActivity">


    <GridLayout
        android:id="@+id/game_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:columnCount="11"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/startField"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/startfield" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/adidas"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:rotation="270"
                android:src="@drawable/adidas" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/adidas"
                android:layout_centerHorizontal="true"
                android:text="$100"
                android:textSize="14sp" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/money"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:src="@drawable/money"
            android:rotation="270"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/nike"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:rotation="270"
                android:src="@drawable/nike" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nike"
                android:layout_centerHorizontal="true"
                android:text="$150"
                android:textSize="14sp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:rotation="270"
            android:src="@drawable/money" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/audi"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:rotation="270"
                android:src="@drawable/audi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/audi"
                android:layout_centerHorizontal="true"
                android:text="$200"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/vk"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:rotation="270"
                android:src="@drawable/vk" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vk"
                android:layout_centerHorizontal="true"
                android:text="$300"
                android:textSize="14sp" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/question1"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:src="@drawable/question" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
